<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/back_page"
        android:contentDescription="@string/back_button_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/onboarding_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="친구들과 한 공간에서\n모임을 정할 수 있어요!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="left"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <ImageView
        android:id="@+id/character_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/character3"
        android:contentDescription="@string/character_desc"
        app:layout_constraintBottom_toTopOf="@id/indicator_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="60dp"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:id="@+id/indicator_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/start_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="200dp">
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/inactive_indicator"
            android:layout_margin="4dp" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/inactive_indicator"
            android:layout_margin="4dp" />

        <View
            android:layout_width="24dp"
            android:layout_height="8dp"
            android:background="@drawable/active_indicator"
            android:layout_margin="4dp" />
    </LinearLayout>

    <Button
        android:id="@+id/start_button"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="시작"
        android:backgroundTint="#4F46E5"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>