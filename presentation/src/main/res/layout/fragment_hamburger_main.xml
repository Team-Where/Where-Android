<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imageClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_close"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretend_semibold"
        android:textColor="#343A40"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageClose"
        tools:text="또구몬님"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:text="프로필 수정"
        android:textSize="14sp"
        android:stateListAnimator="@null"
        android:textColor="@color/main_color"
        android:padding="5dp"
        android:fontFamily="@font/pretend_medium"
        android:layout_marginStart="20dp"
        android:drawableLeft="@drawable/icon_pencil_main_color"
        android:background="@drawable/shape_rounded_gray_radius_16"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_nickname"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/image_profile_default_cover"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/text_nickname"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/meet_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/shape_rounded_light_blue_radius_12"
        app:layout_constraintTop_toBottomOf="@id/image_profile">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:src="@drawable/icon_calender_purple"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 모임 횟수"
            android:fontFamily="@font/pretend_medium"
            android:textSize="16sp"
            android:textColor="#343A40"
            android:layout_marginStart="10dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretend_semibold"
            android:textColor="@color/main_color"
            android:layout_marginEnd="20dp"
            android:textSize="16sp"
            tools:text = "4"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#F3F4F6"
        app:layout_constraintTop_toBottomOf="@id/meet_container"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:id="@+id/image_ring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        android:src="@drawable/icon_ring"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림"
        android:textSize="18sp"
        android:fontFamily="@font/pretend_regular"
        android:textColor="#212529"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@id/image_ring"
        app:layout_constraintStart_toEndOf="@id/image_ring"/>

    <ImageView
        android:id="@+id/image_arrow_ring"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/icon_right"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_ring"/>

    <ImageView
        android:id="@+id/image_faq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        android:src="@drawable/icon_faq"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_ring" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAQ"
        android:textSize="18sp"
        android:fontFamily="@font/pretend_regular"
        android:textColor="#212529"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@id/image_faq"
        app:layout_constraintStart_toEndOf="@id/image_faq"/>

    <ImageView
        android:id="@+id/image_arrow_faq"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/icon_right"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_faq"/>

    <ImageView
        android:id="@+id/image_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        android:src="@drawable/icon_person"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_faq" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1:1 문의"
        android:textSize="18sp"
        android:fontFamily="@font/pretend_regular"
        android:textColor="#212529"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@id/image_person"
        app:layout_constraintStart_toEndOf="@id/image_person"/>

    <ImageView
        android:id="@+id/image_arrow_person"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/icon_right"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_person"/>

    <ImageView
        android:id="@+id/image_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        android:src="@drawable/icon_notice"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_person" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공지사항"
        android:textSize="18sp"
        android:fontFamily="@font/pretend_regular"
        android:textColor="#212529"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@id/image_notice"
        app:layout_constraintStart_toEndOf="@id/image_notice"/>

    <ImageView
        android:id="@+id/image_arrow_notice"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/icon_right"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_notice"/>

    <ImageView
        android:id="@+id/icon_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        android:src="@drawable/icon_setting"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_notice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textSize="18sp"
        android:fontFamily="@font/pretend_regular"
        android:textColor="#212529"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@id/icon_setting"
        app:layout_constraintStart_toEndOf="@id/icon_setting"/>

    <ImageView
        android:id="@+id/image_arrow_setting"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/icon_right"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/icon_setting"/>

</androidx.constraintlayout.widget.ConstraintLayout>